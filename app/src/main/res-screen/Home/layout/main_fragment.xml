<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_khoso"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            style="@style/style_image_main"
            android:src="@mipmap/ic_sim"/>

        <TextView
            style="@style/style_text_main"
            android:text="@string/kho_so"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_thutuc"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_toRightOf="@+id/layout_khoso"
        android:orientation="vertical">

        <ImageView
            style="@style/style_image_main"
            android:src="@mipmap/ic_thutuc2"/>

        <TextView
            style="@style/style_text_main"
            android:text="@string/thu_tuc"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_congno"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/layout_khoso"
        android:orientation="vertical">

        <ImageView
            style="@style/style_image_main"
            android:src="@mipmap/ic_congno"/>

        <TextView
            style="@style/style_text_main"
            android:text="@string/cong_no"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ctkm"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@+id/layout_khoso"
        android:layout_toRightOf="@+id/layout_congno"
        android:orientation="vertical">

        <ImageView
            style="@style/style_image_main"
            android:src="@mipmap/ic_khuyenmai2"/>

        <TextView
            style="@style/style_text_main"
            android:lines="2"
            android:text="@string/ct_km"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_upanh"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@+id/layout_ctkm"
        android:orientation="vertical">

        <ImageView
            style="@style/style_image_main"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_upload"/>

        <TextView
            style="@style/style_text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/up_anh"/>
    </LinearLayout>

</com.toan_itc.mobifone.libs.view.StateLayout>
