<?xml version="1.0" encoding="utf-8"?>
<com.toan_itc.mobifone.libs.view.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <EditText
      android:id="@+id/txt_search"
      android:layout_width="120dp"
      android:layout_height="40dp"
      android:background="@null"
      android:digits="*?0123456789"
      android:gravity="start|center_vertical"
      android:hint="@string/home_txt_hint_search"
      android:textColor="@color/md_black_1000"
      android:textSize="12sp"
      style="@style/search_edittext"
      />
  <android.support.v7.widget.AppCompatButton
      android:id="@+id/btn_search"
      android:layout_width="80dp"
      android:layout_height="45dp"
      android:layout_toRightOf="@+id/txt_search"
      android:text="Search"
      />
  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spinner"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_toRightOf="@+id/btn_search"
      android:spinnerMode="dropdown"
      />
  <RadioGroup
      android:id="@+id/radio_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_search"
      android:orientation="horizontal"
      >

    <RadioButton
        android:id="@+id/rad_opition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:text="Tuỳ chọn"
        android:textSize="11sp"
        />

    <RadioButton
        android:id="@+id/rad_090"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:checked="true"
        android:text="090"
        android:textSize="11sp"
        />

    <RadioButton
        android:id="@+id/rad_093"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:text="093"
        android:textSize="11sp"
        />

    <RadioButton
        android:id="@+id/rad_089"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:text="089"
        android:textSize="11sp"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_dauso"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1.2"
        android:spinnerMode="dropdown"
        />
  </RadioGroup>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/radio_group"
      />

</com.toan_itc.mobifone.libs.view.StateLayout>
